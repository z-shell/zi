{
  "conventionalCommits.scopes": [
    "maintenance",
    "workspace",
    "community",
    "general",
    "misc"
  ],
  "markdownlint.config": {
    "extends": ".github/.markdownlint.yaml"
  },
  "prettier.configPath": ".github/.prettierrc",
  "shellformat.useEditorConfig": true,
  "files.associations": {
    "*za-*": "shellscript"
  },
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zsh": true,
    "**/*.zshrc": true,
    "**/zshrc": true,
    "**/*.zprofile": true,
    "**/zprofile": true,
    "**/*.zlogin": true,
    "**/zlogin": true,
    "**/*.zlogout": true,
    "**/zlogout": true,
    "**/*.zshenv": true,
    "**/zshenv": true,
    "**/*.zsh-theme": true,
    "**/*za-*": true
  }
}
